pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Frontend Tests') {
            steps {
                dir('client') {
                    // Specify the full path to the Yarn executable
                    bat 'C:\\Program Files (x86)\\Yarn\\bin\\yarn install'
                    bat 'C:\\Program Files (x86)\\Yarn\\bin\\yarn test'
                }
            }
        }
    }
}

