pipeline {
    agent any

    tools {
        nodejs 'Nodejs' ,
        // Use the tool name defined in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Frontend Tests') {
            steps {
                dir('client') {
                    sh 'yarn install'
                    sh 'npm test'
                }
            }
        }
    }
}
