pipeline {
    agent any

    environment {
        // Use the correct tool name (Nodejs) that matches your Jenkins configuration
        PATH+Nodejs = "${tool name: 'Nodejs', type: 'NodeJS'}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Frontend Tests') {
            steps {
                dir('client') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
}
