pipeline {
    agent any

    tools {
        nodejs 'Nodejs'
    }
    environment {
        MONGODB_URI=credentials('Mongodb')
        TOKEN_KEY=credentials('Tokenkey')
        EMAIL=credentials('Email')
        PASSWORD=credentials('Password')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Frontend Tests') {
            steps {
                dir('client') {
                    sh 'yarn install'
                }
            }
        }
        stage('Server Tests') {
            steps {
                dir('server') {
                    script {
                        sh 'npm install'
                        env.MONGODB_URI = credentials('Mongodb')
                        env.TOKEN_KEY = credentials('Tokenkey')
                        env.EMAIL = credentials('Email')
                        env.PASSWORD = credentials('Password')
                        sh 'npm test'
                    }
                }
            }
        }
        stage('Build Images') {
            steps {
                script {
                    def dockerTool = tool name: 'Docker', type: 'org.jenkinsci.plugins.docker.commons.tools.DockerTool'
                    sh "${dockerTool} build -t raslen/ci:cd-app:client-latest client"
                }
            }
        }
    }
}


