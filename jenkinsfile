pipeline {
    agent any

    tools {
        nodejs 'Nodejs'
    }
    environment {
        MONGODB_URI=credentials('Mongodb')
        TOKEN_KEY=credentials('Tokenkey')
        EMAIL=credentials('Email')
        PASSWORD=credentials('Password')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Frontend Tests') {
            steps {
                dir('client') {
                    sh 'yarn install'
                    sh 'yarn start'
                }
            }
        }
        stage('Server Tests') {
	        steps {
		        dir('server') {
			        sh 'npm install'
			        sh 'export MONGODB_URI=$MONGODB_URI'
			        sh 'export TOKEN_KEY=$TOKEN_KEY'
			        sh 'export EMAIL=$EMAIL'
			        sh 'export PASSWORD=$PASSWORD'
			        sh 'npm test'
		        }
	        }
        }
        stage('Build Images') {
            steps {
        script {
            def dockerTool = tool name: 'Docker', type: 'org.jenkinsci.plugins.docker.commons.tools.DockerTool'
            sh "${dockerTool}/bin/docker build -t raslen/CI:CD-app:client-latest client"
        }
    }
        }
    }
}

