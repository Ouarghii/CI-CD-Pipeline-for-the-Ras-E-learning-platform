pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Backend Dependencies') {
    steps {
        script {
            def nodejsHome = tool name: 'nodejs', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
            def npmHome = tool name: 'npm', type: 'jenkins.plugins.nodejs.tools.NpmInstallation'

            env.PATH = "${nodejsHome}/bin:${npmHome}/bin:${env.PATH}"
            dir('server') {
                sh 'npm install'
            }
        }
    }
}


        stage('Build and Test Backend') {
            steps {
                dir('server') {
                    sh 'npm run build'
                    sh 'npm test'
                }
            }
        }

       stage('Install Frontend Dependencies') {
    steps {
        script {
            def nodejsHome = tool name: 'nodejs', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
            def npmHome = tool name: 'npm', type: 'jenkins.plugins.nodejs.tools.NpmInstallation'

            env.PATH = "${nodejsHome}/bin:${npmHome}/bin:${env.PATH}"
            dir('client') {
                sh 'npm install'
            }
        }
    }
}
        stage('Build and Test Frontend') {
            steps {
                dir('client') {
                    sh 'npm run build'
                    sh 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage'
            }
        }
    }
}
