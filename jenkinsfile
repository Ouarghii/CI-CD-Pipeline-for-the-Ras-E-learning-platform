pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Backend Dependencies') {
    steps {
        script {
            
            dir('server') {
                sh 'npm install'
            }
        }
    }
}


        stage('Build and Test Backend') {
            steps {
                dir('server') {
                    sh 'npm run build'
                    sh 'npm test'
                }
            }
        }

       stage('Install Frontend Dependencies') {
    steps {
        script {
           
            dir('client') {
                sh 'npm install'
            }
        }
    }
}
        stage('Build and Test Frontend') {
            steps {
                dir('client') {
                    sh 'npm run build'
                    sh 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage'
            }
        }
    }
}
